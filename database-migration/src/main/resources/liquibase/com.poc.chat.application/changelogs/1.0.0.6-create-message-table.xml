<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet dbms="postgresql" author="chat-application-db" id="chat-application-db-rollback-tag-1.0.0.6">
        <tagDatabase tag="chat-application-db-rollback-tag-1.0.0.6"/>
    </changeSet>

    <changeSet dbms="postgresql" author="chat-application-db" id="1.0.0.6-1">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="message"/>
            </not>
        </preConditions>

        <createTable tableName="message">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="message_pk"/>
            </column>
            <column name="chat_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="sender_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="is_read" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="is_edited" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign Key to Chat -->
        <addForeignKeyConstraint
                baseTableName="message"
                baseColumnNames="chat_id"
                referencedTableName="chat"
                referencedColumnNames="id"
                constraintName="fk_message_chat"
                onDelete="CASCADE"/>

        <!-- Foreign Key to User (sender) -->
        <addForeignKeyConstraint
                baseTableName="message"
                baseColumnNames="sender_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_message_sender"
                onDelete="CASCADE"/>

        <!-- Index for faster queries by chat -->
        <createIndex tableName="message" indexName="idx_message_chat_id">
            <column name="chat_id"/>
        </createIndex>

        <!-- Index for faster queries by sender -->
        <createIndex tableName="message" indexName="idx_message_sender_id">
            <column name="sender_id"/>
        </createIndex>

        <!-- Index for faster queries by created_at (for ordering) -->
        <createIndex tableName="message" indexName="idx_message_created_at">
            <column name="created_at"/>
        </createIndex>

        <rollback>
            <dropTable tableName="message"/>
        </rollback>

    </changeSet>

</databaseChangeLog>